{
  "expo": {
    "name": "Airbnb Property Manager",
    "slug": "airbnb-property-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "../../assets/images/icon.png",
    "scheme": "airbnb-property-manager",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "../../assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.airbnb.propertymanager",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for property documentation.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for property documentation.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to show nearby properties and services.",
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice notes and communication features."
      },
      "associatedDomains": ["applinks:airbnb-property-manager.com"]
    },
    "android": {
      "package": "com.airbnb.propertymanager",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "../../assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "airbnb-property-manager.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "../../assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "../../assets/images/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID for secure authentication."
        }
      ],
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID for secure storage."
        }
      ],
      [
        "expo-updates",
        {
          "enabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "your-expo-username"
  }
}
