{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Expo: Android (npm run android)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "android"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Expo: iOS (npm run ios)",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "ios"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Expo: Web (Chrome)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:19006",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "Dev: Start Server"
		},
		{
			"name": "TypeScript: Check project",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npx",
			"runtimeArgs": ["tsc", "--noEmit"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
