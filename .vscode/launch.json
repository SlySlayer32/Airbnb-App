{
	"version": "0.2.0",
	"configurations": [
		// =================================================================================
		// == üêõ Debug Configurations - React Native / Expo
		// =================================================================================
		{
			"name": "Debug: Android (Attach)",
			"type": "reactnative",
			"request": "attach",
			"platform": "android",
			"sourceMaps": true,
			"outDir": "${workspaceFolder}/.expo",
			"trace": "verbose"
		},
		{
			"name": "Debug: iOS (Attach)",
			"type": "reactnative",
			"request": "attach",
			"platform": "ios",
			"sourceMaps": true,
			"outDir": "${workspaceFolder}/.expo",
			"trace": "verbose"
		},
		{
			"name": "Debug: Expo Go (Android)",
			"type": "reactnative",
			"request": "launch",
			"platform": "android",
			"cwd": "${workspaceFolder}",
			"enableDebug": true
		},
		{
			"name": "Debug: Expo Go (iOS)",
			"type": "reactnative",
			"request": "launch",
			"platform": "ios",
			"cwd": "${workspaceFolder}",
			"enableDebug": true
		},
		// =================================================================================
		// == üåê Web Debugging
		// =================================================================================
		{
			"name": "Debug: Web (Chrome)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:19006",
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"webpack://*": "${webRoot}/*"
			},
			"preLaunchTask": "Dev: Start Server"
		},
		{
			"name": "Debug: Web (Edge)",
			"type": "msedge",
			"request": "launch",
			"url": "http://localhost:19006",
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"webpack://*": "${webRoot}/*"
			},
			"preLaunchTask": "Dev: Start Server"
		},
		// =================================================================================
		// == üöÄ Launch Configurations
		// =================================================================================
		{
			"name": "Launch: Android",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "android"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Launch: iOS",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "ios"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Launch: Web",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "web"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"]
		},
		// =================================================================================
		// == üîç Verification & Testing
		// =================================================================================
		{
			"name": "Verify: TypeScript Check",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npx",
			"runtimeArgs": ["tsc", "--noEmit"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Verify: Lint Project",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "lint"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"compounds": [
		{
			"name": "üî• Debug: Full Stack (Web + Server)",
			"configurations": ["Debug: Web (Chrome)", "Dev: Start Server"],
			"presentation": {
				"hidden": false,
				"group": "debug",
				"order": 1
			}
		}
	]
}
